{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": "(.*\\.spec\\.ts|.*\\.e2e-spec\\.ts)$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverage": true,
  "coverageDirectory": "../coverage",
  "collectCoverageFrom": ["**/*.(t|j)s", "!**/node_modules/**", "!**/dist/**"]
}
